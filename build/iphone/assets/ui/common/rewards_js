function rewardsView(){var e="/images/mainmenu/",t=Ti.UI.createView({backgroundImage:e+"background.png"}),i=Ti.App.Properties.getInt("userPoints",0),a={fontFamily:"HelveticaNeue-Thin",fontSize:"28dp",color:"#fff"},r={fontFamily:"HelveticaNeue-Thin",fontSize:"22dp",color:"#fff"},o={fontFamily:"HelveticaNeue-Thin",fontSize:"60dp",color:"#fff"},n=Ti.UI.createImageView({image:e+"logo.png",top:"30dp"}),d=Ti.UI.createImageView({image:e+"loginbtn.png",height:"47dp",width:"175dp"}),c=Ti.UI.createLabel({text:"Redeem Now",font:r,color:"white"}),p=Ti.UI.createLabel({text:"You Have Earned",font:a}),l=Ti.UI.createLabel({text:i.toString(),font:o}),s=Ti.UI.createLabel({text:"Points",font:a}),u=Ti.UI.createView({layout:"vertical",width:Ti.UI.FILL,height:"40%",top:"225dp"});u.add(p),u.add(l),u.add(s);var g=Ti.UI.createButton({height:"47dp",width:"180dp",bottom:"30dp"});return g.add(d),g.add(c),g.addEventListener("click",function(){Titanium.Platform.openURL("http://www.sirvipays.com")}),t.addEventListener("click",function(){t.hide()}),t.add(n),t.add(u),t.add(g),t}module.exports=rewardsView;