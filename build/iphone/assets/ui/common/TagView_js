function TagView(e){var t={fontFamily:"HelveticaNeue-Thin",fontSize:"15dp",color:"#fff"},i="/images/interest/",a=Ti.UI.createView({height:"30dp",backgroundColor:"#00b9ff",borderRadius:"12.5dp",layout:"horizontal",type:"off",left:"3dp",top:"3dp"}),r=Ti.UI.createLabel({text:e,font:t,color:"white",textAlign:"center",left:"1dp"}),o=Ti.UI.createImageView({image:i+"redcross.png",left:"1dp",top:"1dp",width:"28dp",type:"off"});return a.addEventListener("click",function(){"off"==a.type?(a.backgroundColor="#c20261",a.type="on",o.image=i+"bluecross.png",o.type="on"):(a.backgroundColor="#00b9ff",a.type="off",o.image=i+"redcross.png",o.type="off")}),a.width=r.toImage().width+32,a.add(o),a.add(r),a}module.exports=TagView;